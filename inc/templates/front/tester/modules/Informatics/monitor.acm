      if ($data[$uid]['penalty']>$prev_penalty) $place++;

      if ($data[$uid]['total']==$prev_problems && $data[$uid]['penalty']==$prev_penalty)
        $place_delta++; else {
        $place+=$place_delta;
        $place_delta=0;
      }
      
?>
