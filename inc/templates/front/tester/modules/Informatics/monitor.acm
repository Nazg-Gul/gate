    $s=$stats_info[$i];
    print ('<tr class="stat'.(($i%2==0)?(' l'):('')).'"><td class="h" colspan="2">'.$s['title'].'</td>');
    for ($j=0; $j<$problems_count; $j++) {
      $it=$problems[$j];
