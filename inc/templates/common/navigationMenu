<?php
  $document_root = config_get ('document-root');
    
  global $current_contest;
 
  if ($current_contest=='' || $current_contest==-1)
      $current_contest = opt_get("current_contest_number");
?>

<div class="menu">
  <div class="cpt">Основное меню сайта</div>
  <div class="body">
    <ul class="navMenu" type="square">
      <li><a href="<?=$document_root . '/articles/news'?>">Новости</a></li>
      <li><a href="<?=$document_root . '/'?>">Главная страница</a></li>
      <?php
      if (user_authorized()) 
      {
        printf('<li><a href="'.$document_root.'/login/profile/info/main">Мой профиль</a></li>');
        printf('<li><a href="'.$document_root.'/login/profile/info/school">Учебное заведение</a></li>');
      }
      ?>
      <li><a href="<?=$document_root . '/articles/rules'?>">Правила сайта</a></li>
      <li><a href="<?=$document_root?>/tipsling/contest/choose">Выбрать конкурс</a></li>
      <?php
        /*if (user_access_root ())
        {
            printf('<li><a href="'.$document_root . '/forum">Форум</a></li>');
        }*/
        if (!user_authorized()) printf('<li><a href="'.$document_root.'/login">Войти</a></li>');
        else printf('<li><a href="'.$document_root.'/?action=logout">Выйти</a></li>');
      ?>
    </ul>
  </div>
</div>

<br/> 

<div class="menu">
  <div class="cpt">Документы</div>
  <div class="body">
    <ul class="navMenu" type="square">
        <li><a href="<?=$document_root . '/articles/docs/regulations'?>">Положение о конкурсе</a></li>
        <li><a href="<?=$document_root . '/articles/docs/workrules'?>">Правила работы на конкурсе</a></li>
        <li><a href="<?=$document_root . '/articles/regrules'?>">Правила регистрации</a></li>
        <li><a href="<?=$document_root . '/articles/examples'?>">Образцы конкурсных заданий с решениями</a></li>
        <li><a href="<?=$document_root . '/articles/docs/contest'?>">Договор на участие и оплата</a></li>
        <li><a href="<?=$document_root . '/articles/docs/TrizSchool'?>">Школа ТРИЗформашки</a></li>
        <li><a href="<?=$document_root . '/articles/history'?>">История ТРИЗформашки</a></li>
        <li><a href="<?=$document_root . '/articles/archive'?>">Итоги прошлых конкурсов</a></li>
        <li><a href="<?=$document_root . '/articles/contacts'?>">Контакты</a></li>
    </ul>
  </div>
</div>

<br/> 

<div class="menu">
  <?php
    if ($current_contest!='')
    {
        $it = contest_get_by_id($current_contest);
        printf('<div class="cpt">'.$it['name'].'</div>');
    }
  ?>
  <div class="body">
    <ul class="navMenu" type="square">

      <?php
        global $current_contest;
        if ($current_contest!='')
        {
            $it = contest_get_by_id($current_contest);
            if (user_authorized())
            {
                $query = arr_from_query ("select * ".
                                       "from Admin_FamilyContest ".
                                       "where family_contest_id=".$it['family_id']." and ".
                                       "user_id=".user_id());
                if (count($query) > 0)
                {
                    printf('<li><a href="'.$document_root.'/tipsling/contest/admin/">Администрирование</a></li>');
                }
                if (get_contest_status($current_contest)==4){
                    printf('<li><a href="'.$document_root.'/tipsling/contest/team/certificate/">Сертификаты</a></li>');
                }
                printf('<li><a href="'.$document_root.'/tipsling/contest/team/my/">Мои команды</a></li>');
                if (is_user_bookkeeper(user_id(), $current_contest))
                {
                    printf('<li><a href="'.$document_root.'/tipsling/contest/payment/my">Мои платежи</a></li>');
                    printf('<li><a href="'.$document_root.'/tipsling/contest/payment/all">Все платежи</a></li>');
                }
            }
            printf('<li><a href="'.$document_root.'/tipsling/contest/team/all">Все команды</a></li>');
            $contest_status = get_contest_status($current_contest);
            if ($contest_status>2 && $contest_status<5)
                printf('<li><a href="'.$document_root.'/tipsling/contest/status">Монитор</a></li>');
            /*if (user_authorized())
            {
                printf('<li><a href="'.$document_root.'/tipsling/contest/poll?action=vote&id=1">Опрос</a></li>');
            }*/
            printf('</ul></li>');
        }
      ?>
      
    </ul>
</div>
</div>

<br/>
