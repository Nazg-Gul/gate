<?php
  global $current_contest;
  $document_root = config_get ('document-root');
  
  if ($current_contest=='' || $current_contest==-1)
      $current_contest = opt_get("current_contest_number");

  $tpl=manage_template_by_name ('Страница / Меню навигации');
  echo (wiki_menu_parse ($tpl->GetText ()));
?>

<br/> 
<div class="menu">
  <?php
    if ($current_contest!='')
    {
        $it = contest_get_by_id($current_contest);
        printf('<div class="cpt">'.$it['name'].'</div>');
    }
  ?>
  <div class="body">
    <ul class="navMenu" type="square">

      <?php
        global $current_contest;
        if ($current_contest!='')
        {
            $it = contest_get_by_id($current_contest);
            if (user_authorized())
            {
                $query = arr_from_query ("select * ".
                                       "from Admin_FamilyContest ".
                                       "where family_contest_id=".$it['family_id']." and ".
                                       "user_id=".user_id());
                if (count($query) > 0)
                {
                    printf('<li><a href="'.$document_root.'/tipsling/contest/admin/">Администрирование</a></li>');
                }
                if (get_contest_status($current_contest)==4){
                    printf('<li><a href="'.$document_root.'/tipsling/contest/team/certificate/">Сертификаты</a></li>');
                }
                printf('<li><a href="'.$document_root.'/tipsling/contest/team/my/">Мои команды</a></li>');
                if (is_user_bookkeeper(user_id(), $current_contest))
                {
                    printf('<li><a href="'.$document_root.'/tipsling/contest/payment/my">Мои платежи</a></li>');
                }
            }
            printf('<li><a href="'.$document_root.'/tipsling/contest/team/all">Все команды</a></li>');
            if (user_authorized() && is_user_bookkeeper(user_id(), $current_contest)){
                printf('<li><a href="'.$document_root.'/tipsling/contest/payment/all">Все платежи</a></li>');
            }
            
            $contest_status = get_contest_status($current_contest);
            if ($contest_status>2 && $contest_status<5){
                printf('<li><a href="'.$document_root.'/tipsling/contest/status">Монитор</a></li>');
            }
            if (user_authorized() && $contest_status == 3){
                printf('<li><a href="'.$document_root.'/tipsling/contest/answer">Отослать решение</a></li>');
            }
            /*if (user_authorized())
            {
                printf('<li><a href="'.$document_root.'/tipsling/contest/poll?action=vote&id=1">Опрос</a></li>');
            }*/
            printf('</ul></li>');
        }
      ?>
      
    </ul>
</div>
</div>

<br/>
<div class="menu">
  <div class="cpt">Тризформашка в соцсетях</div>
  <div class="body">
    <ul class="navMenu" type="square">
        <li><a href="http://vk.com/trizformashka" target="_blank">В контакте</a></li>
        <li><a href="https://www.facebook.com/groups/trizformashka/" target="_blank">Facebook</a></li>
    </ul>
  </div>
</div>
